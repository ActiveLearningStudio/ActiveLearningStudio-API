<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<!--
hackathonTitle: create a log4j.xml file to configure logging in the application
hackathonColumn: Develop Base Resources
hackathonLabels: Java,Maven
hackathonLabel: create_java_class_Src_main_resources_log4j_xml
-->
<log4j:configuration debug="false"
	xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss.SSS} %-5p [%c{1}:%L] %m%n" />
		</layout>
	</appender>
	<root>
		<priority value="info" />
		<appender-ref ref="console" />
	</root>
</log4j:configuration>

